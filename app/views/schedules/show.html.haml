- if not flash[:message].nil?
  = flash[:message]
  %br
Schedule for 
%b
  = @schedule.event
  %br

%table
  %tr
    %td
      Timeslot
    %td
      Availability
- @allslots.each do |ts,signup|
  %tr
    %td
      = ts.strftime("%I:%M %p")
    %td
      - if not signup.nil?
        Taken
      - else
        =link_to("Available!",newsignup_url(@schedule, ts.to_i))
    %br
